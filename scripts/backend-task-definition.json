{
  "family": "nutrifit-backend",
  "networkMode": "awsvpc",
  "requiresCompatibilities": ["FARGATE"],
  "cpu": "512",
  "memory": "1024",
  "executionRoleArn": "arn:aws:iam::112129521897:role/ecsTaskExecutionRole",
  "containerDefinitions": [
    {
      "name": "nutrifit-backend",
      "image": "112129521897.dkr.ecr.us-east-1.amazonaws.com/nutrifit-backend:latest",
      "essential": true,
      "portMappings": [
        {
          "containerPort": 8080,
          "protocol": "tcp"
        }
      ],
      "environment": [
        {"name": "SPRING_DATASOURCE_URL", "value": "jdbc:postgresql://nutrifit-db-prod.cul6cmywq9x6.us-east-1.rds.amazonaws.com:5432/postgres"},
        {"name": "SPRING_DATASOURCE_USERNAME", "value": "nutrifit_admin"},
        {"name": "SPRING_JPA_HIBERNATE_DDL_AUTO", "value": "update"},
        {"name": "CORS_ALLOWED_ORIGINS", "value": "https://nutritionxfitness.com,https://www.nutritionxfitness.com"}
      ],
      "secrets": [
        {"name": "SPRING_DATASOURCE_PASSWORD", "valueFrom": "arn:aws:secretsmanager:us-east-1:112129521897:secret:nutrifit-prod-db-password-RrkF6B"},
        {"name": "JWT_SECRET", "valueFrom": "arn:aws:secretsmanager:us-east-1:112129521897:secret:nutrifit-prod-jwt-secret-Drm77O"}
      ],
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-group": "/ecs/nutrifit-backend",
          "awslogs-region": "us-east-1",
          "awslogs-stream-prefix": "ecs",
          "awslogs-create-group": "true"
        }
      },
      "healthCheck": {
        "command": ["CMD-SHELL", "wget --quiet --tries=1 --spider http://localhost:8080/actuator/health || exit 1"],
        "interval": 30,
        "timeout": 10,
        "retries": 3,
        "startPeriod": 60
      }
    }
  ]
}
